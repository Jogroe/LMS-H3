{% extends 'base.html.twig' %}

{% block title %}
	Accueil Product
{% endblock %}

{% block body %}

	<h2>Tous les produits</h2>
	<ul>
		{% for product in products %}
			<li>
                <h3>{{product.name}}</h3>
				<img style ="width: 20%;" src="{{ asset('images/' ~ product.image ) }}" alt="{{product.image}}">
				<div>
					<p>Le prix est de : {{product.price|format_currency('EUR', locale='fr')}}</p>
					<a href="{{ url('product.detail',{'slug': product.slug}) }}">En savoir plus</a>
				</div>
			</li>
		{% endfor %}
	</ul>

	{% include "_inc/pagination_products.html.twig" %}
{% endblock %}